@{
	ViewData["Title"] = "СТАТИБИ";

}
@model List<Article>;

<div class="text-center container">
		@for (int i = 0; i < Model.Count; i++)
		{
			<div class="row">
				<h3>@Model[i].Title</h3>
				<h3>@Model[i].Author</h3>
				<a href="@Url.Action("ReadArticle", "Article", new { id = Model[i].Guid })" class="btn btn-warning" role="button">ЧИТАТЬ</a>
			</div> 
		}
</div>
